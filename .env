# Environment Configuration Template
# Copy this file to .env and update with your values

# Application
ENVIRONMENT=development
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# MLflow
MLFLOW_TRACKING_URI=./mlruns
MLFLOW_EXPERIMENT_NAME=gmv_forecasting

# Database (Optional)
DATABASE_URL=postgresql://gmv_user:gmv_password@localhost:5432/gmv_forecasting

# Redis (Optional)
REDIS_URL=redis://localhost:6379/0

# Model Configuration
MODEL_CACHE_TTL=3600
DEFAULT_MODEL_VERSION=latest

# Monitoring
ENABLE_MONITORING=true
METRICS_PORT=9090

# Security
API_KEY=your-secret-api-key-here
CORS_ORIGINS=*

# Data Paths
DATA_PATH=./data
MODELS_PATH=./models
OUTPUTS_PATH=./outputs

